---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import TrackCard from '../../components/TrackCard.astro';

const { id } = Astro.params;
const tracks = await getCollection('tracks');
const track = tracks.find((t) => t.id === id);
---

<body class="tracks-we-love">
  <Layout>
    <Header />
    <main style="max-width: 100vw; width: 100%; padding: 0;">
      <div class="main-content" style="max-width: 100vw; width: 100%;">
        {track ? (
          <TrackCard track={{
            data: track.data,
            body: track.body || ''
          }}>
            {track.body}
          </TrackCard>
        ) : (
          <div style="padding: 2rem; text-align: center;">
            <h1>Track Not Found</h1>
            <p>The requested track does not exist.</p>
            <a href="/tracks-we-love">‚Üê Back to Tracks</a>
          </div>
        )}
      </div>
    </main>
    <Footer />
  </Layout>
</body> 