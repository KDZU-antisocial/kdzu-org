---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import EventCard from '../../components/EventCard.astro';

export async function getStaticPaths() {
  const events = await getCollection('events', ({ id }) => {
    return !id.startsWith('_');
  });
  console.log('Available events:', events.map(e => e.slug));
  return events.map((event) => ({
    params: { slug: event.slug },
    props: { event },
  }));
}

// Get the event from props or find it by slug
const { event: propEvent } = Astro.props;
const slug = Astro.params.slug;

let event;
if (propEvent) {
  event = propEvent;
} else {
  // Find the event by slug
  const events = await getCollection('events', ({ id }) => {
    return !id.startsWith('_');
  });
  event = events.find(e => e.slug === slug);
  
  if (!event) {
    throw new Error(`Event not found for slug: ${slug}`);
  }
}


const isDev = import.meta.env.DEV;
const cssUrl = isDev ? '/styles/global.css' : 'https://static.kdzu.org/styles/global.css';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{event.data.title} - KDZU</title>
    <link rel="stylesheet" href={cssUrl} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="https://static.kdzu.org/favicon/favicon.ico" />
    <link rel="icon" type="image/svg+xml" href="https://static.kdzu.org/favicon/favicon.svg" />
    <link rel="icon" type="image/png" href="https://static.kdzu.org/favicon/favicon-32x32.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="https://static.kdzu.org/favicon/favicon-16x16.png" sizes="16x16" />
    <link rel="apple-touch-icon" href="https://static.kdzu.org/favicon/apple-touch-icon.png" sizes="180x180" />
    <link rel="manifest" href="https://static.kdzu.org/favicon/site.webmanifest" />
    <meta name="theme-color" content="#191919" />
  </head>
  <body>
    <Header />
    <main>
      <div class="main-content">
        <div class="event-detail">
          <div style="max-width: 720px; width: 100%; margin: 0 auto;">
            <ul class="calendar single-event">
              <EventCard event={event} />
            </ul>
          </div>
        </div>
        
        {event.data.eventContent && (
          <div class="event-content">
            <Fragment set:html={event.data.eventContent} />
          </div>
        )}
      </div>
    </main>
    <Footer />
  </body>
</html>

<style>
  .event-detail {
    display: flex;
    justify-content: center;
    margin: 2rem 0;
  }
  
  .event-content {
    max-width: 800px;
    margin: 2rem auto;
    padding: 0 1rem;
  }
  
  .event-content :global(h1),
  .event-content :global(h2),
  .event-content :global(h3) {
    color: #ff6b6b;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .event-content :global(p) {
    font-size: 1.5rem;
    line-height: 1.6;
    margin-bottom: 1rem;
  }
  
  .event-content :global(ul),
  .event-content :global(ol) {
    padding-left: 0;
    margin: 1rem 0;
  }
  
  .event-content :global(li) {
    list-style: none;
    font-size: 1.5rem;
    line-height: 1.6;
  }
  
  .event-content :global(strong) {
    color: #ff6b6b;
  }
  
  .event-content :global(a) {
    color: #ff6b6b;
    text-decoration: none;
  }
  
  .event-content :global(a:hover) {
    text-decoration: underline;
  }
  
  /* Override calendar grid for single events */
  .calendar.single-event {
    grid-template-columns: 1fr !important;
  }
  
  .calendar.single-event li {
    margin-bottom: 0.5rem;
  }
</style>
