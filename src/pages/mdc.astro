---
import Copyright from '../components/Copyright.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

const isDev = import.meta.env.DEV;
const cssUrl = isDev ? '/styles/global.css' : 'https://static.kdzu.org/styles/global.css';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MDC - KDZU</title>
    <link rel="stylesheet" href={cssUrl} />
  </head>
  <body class="mdc-page">
    <Header />
    <main>
      <div class="main-content">
        <h1>MDC</h1>
        <p class="subtitle">Mutually Demurred Construction</p>
        <section>
          <h2>About MDC</h2>
          <p>This is the MDC page. You can customize this content to fit your needs.</p>
          
          <h2>Content</h2>
          <p>Add your content here. This could be information about MDC, links, or any other content you'd like to share.</p>
          
          <h2>Features</h2>
          <ul>
            <li>Feature 1</li>
            <li>Feature 2</li>
            <li>Feature 3</li>
          </ul>
          
          <h2>Get Started</h2>
          <p>Ready to explore MDC? Check out the links below or get in touch with us.</p>
        </section>
      </div>
    </main>
    <Footer />
  </body>
</html>

<style>
  .mdc-page main {
    display: block !important;
    grid-template-columns: 1fr !important;
  }

  .mdc-page ul {
    list-style: disc;
    padding-left: 2rem;
    margin-bottom: 1.5rem;
  }

  .mdc-page ul li {
    color: var(--color-light-text);
    margin-bottom: 0.5rem;
    font-size: 1.5rem;
  }

  @media (max-width: 1440px) {
    .mdc-page ul li {
      font-size: 1.375rem;
    }
  }

  @media (max-width: 1024px) {
    .mdc-page ul li {
      font-size: 1.25rem;
    }
  }

  @media (max-width: 768px) {
    .mdc-page ul li {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .mdc-page ul li {
      font-size: 0.9rem;
    }
  }
</style> 