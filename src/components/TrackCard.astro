---
interface Props {
  track: {
    data: {
      title: string;
      artist: string;
      label: string;
      labelLink?: string;
      heroImage: string;
      youtube?: string;
      bandcamp?: string;
      spotify?: string;
    };
    slug: string;
    body: string;
  };
}

const { track } = Astro.props;
const hasContent = track.body && track.body.trim().length > 0;
---

<article class="track-card">
  <div class="track-image">
    <img
      src={track.data.heroImage}
      alt={`${track.data.artist} - ${track.data.title}`}
      width="320"
      height="320"
    />
  </div>
  <div class="track-info">
    <h3>{track.data.title}</h3>
    <p class="artist">{track.data.artist}</p>
    <p class="label">
      {track.data.labelLink ? (
        <a href={track.data.labelLink} target="_blank" rel="noopener noreferrer">
          {track.data.label}
        </a>
      ) : (
        track.data.label
      )}
    </p>
    <div class="markdown">
      {hasContent && (
        <div class="review-header">
          <svg class="review-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M3 18v-6a9 9 0 0 1 18 0v6"></path>
            <path d="M21 19a2 2 0 0 1-2 2h-1a2 2 0 0 1-2-2v-3a2 2 0 0 1 2-2h3zM3 19a2 2 0 0 0 2 2h1a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2H3z"></path>
          </svg>
          <span class="review-source">KDZU</span>
        </div>
      )}
      <slot />
    </div>
  </div>
  <div class="track-links">
    {track.data.youtube && (
      <div class="link-wrapper">
        <a href={track.data.youtube} target="_blank" rel="noopener noreferrer" class="youtube">
          <svg class="icon" viewBox="0 0 24 24" width="16" height="16">
            <path fill="currentColor" d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
          </svg>
          YouTube
        </a>
      </div>
    )}
    {track.data.bandcamp && (
      <div class="link-wrapper">
        <a href={track.data.bandcamp} target="_blank" rel="noopener noreferrer" class="bandcamp">
          <svg class="icon" viewBox="0 0 24 24" width="16" height="16">
            <path fill="currentColor" d="M0 18.75l7.437-13.5H24l-7.437 13.5H0z"/>
          </svg>
          Bandcamp
        </a>
      </div>
    )}
    {track.data.spotify && (
      <div class="link-wrapper">
        <a href={track.data.spotify} target="_blank" rel="noopener noreferrer" class="spotify">
          <svg class="icon" viewBox="0 0 24 24" width="16" height="16">
            <path fill="currentColor" d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
          </svg>
          Spotify
        </a>
      </div>
    )}
  </div>
</article>

<style>
  .review-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 1.25rem 0 0;
  }

  .review-icon {
    color: var(--color-bright-white);
  }

  .review-source {
    color: var(--color-bright-red);
    font-size: 0.9rem;
    font-weight: 500;
  }

  .track-info h3 {
    margin: 0 0 0.25rem;
    font-size: 1.5rem;
    font-weight: 700;
  }

  .track-info .artist {
    color: var(--color-bright-white);
    margin: 0 0 0rem;
    font-size: 1.1rem;
    font-weight: 300;
    opacity: 0.9;
  }
</style> 